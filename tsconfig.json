{
  "compileOnSave": true,
  "compilerOptions": {
      "module": "amd",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outFile": "./dist.js",
      "sourceMap": true,
      "target": "es6",
      "experimentalDecorators": true
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
